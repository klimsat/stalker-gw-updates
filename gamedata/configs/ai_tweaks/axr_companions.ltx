[main]
enable = true
allow_simulation_squads_as_companions = true		; Если это правда, то команды симуляторов (не-история) будут допущены к игроку в качестве компаньона. Если фальшивый игрок не может попросить никого присоединиться к нему, кроме сценариев задач
allow_only_friends_as_companions = false				; Разрешить только друзьям (зеленым) быть компаньонами
max_actor_squad_size = 50							; Мин. НПС можно взять в напарники.
max_actor_squad_size_patriarch = 90					; Макс. НПС можно взять в напарники, после достижения Легенда.
