[logic]
active = beh@general
post_combat_time = 0,0

[beh@general]
combat_ignore_cond = false
combat_ignore_keep_when_attacked = false
meet = meet
gather_items_enabled = false
corpse_detection_enabled = false
actor_dialogs = actor_dialogs
behavior_state = beh_move
target = {!is_squad_commander} commander, actor_squad
walk_dist = 4
jog_dist = 8
run_dist = {=surge_started} 40, 90
keep_distance =  near
near_desired_dist = {!is_squad_commander} 3, 3
far_desired_dist = {!is_squad_commander} 8, 10
wait_anim = {=is_wounded} nil, {is_squad_commander} rush, assault
walk_anim = {=is_wounded} nil, {is_squad_commander} rush, assault
jog_anim = {=is_wounded} nil, {is_squad_commander} rush, assault
run_anim = {=is_wounded} nil, {is_squad_commander} rush, assault
